{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Factures</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ entity.client }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Produit</th>
                <td>{{ entity.produit }}</td>
            </tr>
            <tr>
                <th>Quantit√©</th>
                <td>{{ entity.quantite }}</td>
            </tr>
            <tr>
                <th>Prix unitaire HT</th>
                <td>{{ entity.prixUnitaireHT }}</td>
            </tr>
            <tr>
                <th>Prix total HT</th>
                <td>{{ entity.prixTotalHT }}</td>
            </tr>
            <tr>
                <th>Total HT</th>
                <td>{{ entity.recetteTotaleHT }}</td>
            </tr>

        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('factures') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('factures_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
