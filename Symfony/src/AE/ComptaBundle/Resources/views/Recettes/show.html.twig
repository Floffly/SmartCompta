{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Recettes</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ entity.montant }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ entity.client }}</td>
            </tr>
            <tr>
                <th>Modedepaiement</th>
                <td>{{ entity.modeDePaiement }}</td>
            </tr>
            <tr>
                <th>Justificatif</th>
                <td>{{ entity.justificatif }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('recettes') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('recettes_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
