{% extends "AEUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block button %}
    <div style="margin-top: 30px;" class="btn - btn-default col-lg-2 col-lg-offset-5 col-md-2 col-md-offset-5 col-sm-3 col-sm-offset-4 col-xs-5 col-xs-offset-3">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            <a href="{{ path('fos_user_security_logout') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>
        {% else %}
            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        {% endif %}
    </div>
{% endblock button %}

{% block fos_user_content %}
    <div style="margin-left: 30px;">
        <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
        {% if targetUrl %}
        <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
        {% endif %}

        <p>Aller au <a href="{{ path('dashboard_user') }}">Dashboard</a></p>
    </div>
{% endblock fos_user_content %}
