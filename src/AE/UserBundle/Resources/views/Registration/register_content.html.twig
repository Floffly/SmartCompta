{% trans_default_domain 'FOSUserBundle' %}

<div class="container" style="margin-top: 40px">
    <h1 class="col-lg-8 col-lg-offset-4 col-md-8 col-md-offset-4 col-sm-9 col-sm-offset-3 col-xs-9 col-xs-offset-3">Inscription</h1>
    <div class="row">
        <div style="margin-top: 40px;" class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            {{ form_widget(form) }}
            <div>
                <input type="submit" class="btn btn-default col-lg-offset-9 col-md-offset-9 col-xs-offset-8"  value="{{ 'registration.submit'|trans }}" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>