{% extends '::layout_dashboard.php.twig' %}
{% form_theme delete_form '::Form/field.php.twig' %}


{% block header %}
    <header class="intro-header" style="background-image: url({{asset('img/logo_fond_marron_grand.jpg')}})">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="page-heading">
                        <h1>Achat</h1>
                        <hr class="small">
                        <!--span class="subheading">Have questions? I have answers (maybe).</span-->
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block aeplatform_body %}

<div class="row col-lg-12 col-md-12 jumbotron">

    <table class="record_properties table table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ entity.montant }}</td>
            </tr>
            <tr>
                <th>Fournisseur</th>
                <td>{{ entity.fournisseur }}</td>
            </tr>
            <tr>
                <th>Modedepaiement</th>
                <td>{{ entity.modeDePaiement }}</td>
            </tr>
            <tr>
                <th>Justificatif</th>
                <td>{{ entity.justificatif }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions list-inline list-unstyled text-center">
    <li>
        <a class="btn btn-default" href="{{ path('achats') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a class="btn btn-default" href="{{ path('achats_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
    </div>
{% endblock %}
