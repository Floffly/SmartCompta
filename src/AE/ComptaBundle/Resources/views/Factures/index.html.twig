{% extends '::layout_dashboard.php.twig' %}

{% block header %}
    <header class="intro-header" style="background-image: url({{asset('img/logo_fond_marron_grand.jpg')}})">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="page-heading">
                        <h1>Facturation</h1>
                        <hr class="small">
                        <!--span class="subheading">Have questions? I have answers (maybe).</span-->
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block aeplatform_body %}

    <div class="row col-lg-12 col-md-12 jumbotron">
        <ul class="pull-right" style="margin-bottom: 30px; margin-top: -20px;">
            <a class="btn btn-default" href="{{ path('factures') }}">
                Create a new entry
            </a>
        </ul>
        <table class="records_list table table-responsive text-center">
            <thead>
            <tr>
                <th>Numéro de facture</th>
                <th>Client</th>
                <th>Date</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix unitaire HT</th>
                <th>Prix total HT</th>
                <th>Total HT</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    {#<td><a href="{{ path('achats_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                    <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ entity.produit }}</td>
                    <td>{{ entity.quantite }}</td>
                    <td>{{ entity.prixUnitaireHT }}</td>
                    <td>{{ entity.prixTotalHT }}</td>
                    <td>{{ entity.recetteTotaleHT }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('factures_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('factures_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="row col-lg-12 col-md-12 jumbotron">
        <h3 style="margin-top: -10px; margin-bottom: 30px;">Create a new entry</h3>
        {#% include("AEComptaBundle:Achats:new.html.twig") %#}
        {% form_theme form '::Form/field.php.twig' %}

        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}