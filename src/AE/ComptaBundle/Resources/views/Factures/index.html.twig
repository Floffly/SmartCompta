{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Facturation</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Numéro de facture</th>
                <th>Client</th>
                <th>Date</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix unitaire HT</th>
                <th>Prix total HT</th>
                <th>Total HT</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('factures_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.client }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.produit }}</td>
                <td>{{ entity.quantite }}</td>
                <td>{{ entity.prixUnitaireHT }}</td>
                <td>{{ entity.prixTotalHT }}</td>
                <td>{{ entity.recetteTotaleHT }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('factures_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('factures_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('factures_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
